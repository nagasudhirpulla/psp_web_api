@model IEnumerable<LabelChecksDataLayer.Models.LabelCheck>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DataTablesLayout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>
<table id="checkResultsDiv" class="stripe row-border order-column" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PspMeasurement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Num1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Num2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsiderStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsiderEndTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PspMeasurement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Num1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Num2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsiderStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsiderEndTime)
            </th>
            <th></th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PspMeasurement.Label)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Num1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Num2)
                </td>
                <td>
                    @item.ConsiderStartTime.ToString("dd-MMM-yy")
                </td>
                <td>
                    @item.ConsiderEndTime.ToString("dd-MMM-yy")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
